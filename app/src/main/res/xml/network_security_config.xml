<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust the platform store AND explicitly add Let's Encrypt ISRG Root X1 for older devices -->
    <base-config>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="@raw/isrg_root_x1"/>
        </trust-anchors>
    </base-config>
</network-security-config>
